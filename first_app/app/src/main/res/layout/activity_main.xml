<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.eka.first_app.MainActivity"
    android:orientation="vertical"
    android:weightSum="10">
    <TextView
        android:layout_weight="2"
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="right|center_vertical"
        android:text="0"
        android:textSize="35sp"
        android:textColor="#888"
        android:padding="15dp"
        />
    <LinearLayout
        android:layout_weight="8"
        android:weightSum="4"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_weight="1"
            android:weightSum="4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/numped7"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_btn"
                android:text="7"
                android:textSize="30sp"
                android:textColor="#FFF"/>
            <Button
                android:id="@+id/numped4"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_btn"
                android:text="4"
                android:textSize="30sp"
                android:textColor="#FFF"/>
            <Button
                android:id="@+id/numped1"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_btn"
                android:text="1"
                android:textSize="30sp"
                android:textColor="#FFF"/>
            <Button
                android:id="@+id/dot"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_btn"
                android:text="."
                android:textSize="30sp"
                android:textColor="#FFF"/>
            </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:weightSum="4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/numped8"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_btn"
                android:text="8"
                android:textSize="30sp"
                android:textColor="#FFF"/>
            <Button
                android:id="@+id/numped5"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_btn"
                android:text="5"
                android:textSize="30sp"
                android:textColor="#FFF"/>
            <Button
                android:id="@+id/numped2"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_btn"
                android:text="2"
                android:textSize="30sp"
                android:textColor="#FFF"/>
            <Button
                android:id="@+id/numped0"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_btn"
                android:text="0"
                android:textSize="30sp"
                android:textColor="#FFF"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:weightSum="4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/numped9"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_btn"
                android:text="9"
                android:textSize="30sp"
                android:textColor="#FFF"/>
            <Button
                android:id="@+id/numped6"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_btn"
                android:text="6"
                android:textSize="30sp"
                android:textColor="#FFF"/>

            <Button
                android:id="@+id/numped3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_btn"
                android:text="3"
                android:textColor="#FFF"
                android:textSize="30sp" />

            <Button
                android:id="@+id/eq"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_btn"
                android:text="="
                android:textSize="30sp"
                android:textColor="#FFF"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:weightSum="5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/del"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_btn2"
                android:text="DEL"
                android:textSize="30sp"
                android:textColor="#FFF"/>
            <Button
                android:id="@+id/division"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_btn2"
                android:text="/"
                android:textSize="30sp"
                android:textColor="#FFF"/>

            <Button
                android:id="@+id/multiply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_btn2"
                android:text="*"
                android:textColor="#FFF"
                android:textSize="30sp" />

            <Button
                android:id="@+id/minus"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_btn2"
                android:text="-"
                android:textSize="30sp"
                android:textColor="#FFF"/>
            <Button
                android:id="@+id/plus"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_btn2"
                android:text="+"
                android:textSize="30sp"
                android:textColor="#FFF"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>

